<section class="inner">
	<h2 class="section-ttl">会員一覧</h2>
	<table class="admin_customer_index has_border">
	<thead>
		<th>会員ID</th>
		<th>名前</th>
		<th>フリガナ</th>
		<th>会員ステータス</th>
		
	</thead>
	<tbody>
		<% @customers.each do |customer| %>
			<tr>
				<td><%= customer.id %></td>
				<td><%= customer.full_name %></td>
				<td><%= customer.full_name_kana %></td>
				<td>
					<% if customer.is_active? %>
						<span class="text-active">有効</span>	
					<% else %>
						<span class="text-invalid">退会済み</span>
					<% end %>
				</td>
	
			</tr>
		<% end %>
	</tbody>
</table>
</section>