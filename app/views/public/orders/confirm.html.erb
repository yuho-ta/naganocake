<section>
	<h2>注文情報確認</h2>
	<div>
		<table>
			<thead>
				<tr>
					<th colspan="2">商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
					<% item = cart_item.item %>
					<tr>
						<td>
							<%= image_tag item.get_image%>
						</td>
						<td><%= item.name %></td>
						<td><%= item.with_tax_price %>円</td>
						<td><%= cart_item.amount %></td>
						<td><%= cart_item.subtotal %>円</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<table >
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>送料</td>
					<td>800</td>
				</tr>
				<tr>
					<td>商品合計</td>
					<td><%= @cart_items.sum(&:subtotal) %></td>
					<!--下のようにするとsubtotalを使いながら桁にカンマを入れることが出来る-->
					<%= number_with_delimiter(@cart_items.sum(&:subtotal)) %>
				</tr>
				<tr>
					<td>請求金額</td>
					<td><%= 800 + @cart_items.sum(&:subtotal) %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<%= form_for(@order, url: orders_path) do |f| %>
		<div class="field">
			<%= f.label :payment_method, "支払い方法" %>
			<p><%= @order.payment_method_i18n %></p>
			<%= f.hidden_field :payment_method, value: @order.payment_method %>
		</div>
		<div class="field">
			<label>お届け先</label>
			<p>〒<%= @order.postal_code %> <%= @order.destination %><br><%= @order.name %></p>
			<%= f.hidden_field :postal_code, value: @order.postal_code %>
			<%= f.hidden_field :destination, value: @order.destination %>
			<%= f.hidden_field :name, value: @order.name %>
		</div>
		<div class="actions text-center">
			<%= f.submit "注文を確定する", class: "btn btn-primary submit_to_create_order" %>
		</div>
	<% end %>
</section>