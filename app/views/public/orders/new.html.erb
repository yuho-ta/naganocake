<section>
	<h2>注文情報入力</h2>
	<% if flash[:error] %>
		<div>
			<p><%= flash[:error] %></p>
		</div>
	<% end %>
	<%= form_for(@order, url: orders_confirm_path) do |f| %>
		<div>
			<h3>支払い方法</h3>
	  	<%= f.radio_button :payment_method, "credit_card", :checked => true %>
	  	<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %> <!-- クレジットカード -->
	  	<%= f.radio_button :payment_method, "transfer" %>
	  	<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %> <!-- 銀行振込 -->
		</div>
		<h3>お届け先</h3>
		<div>
			<label><%= radio_button_tag :select_address, 0, :checked => true %>ご自身の住所</label>
			<p>〒<%= current_customer.postal_code %> <%= current_customer.address %></p>
			<p><%= current_customer.full_name %></p>
		</div>
		<div>
			<label><%= radio_button_tag "select_address", 1 %>登録済住所から選択</label>
			<%= select_tag "address_id", options_from_collection_for_select(current_customer.addresses, :id, :finally_address), prompt: "住所を選択してください" %>
		</div>
		<div>
			<label><%= radio_button_tag "select_address", 2 %>新しいお届け先</label>
			<!--https://gyazo.com/059783bd99c6344fcdf6f04431e177ca-->
			<div class="field">
				<!--text_field_tag "モデル[カラム名]"-->
				<%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %>
				<%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "郵便番号", class: "jpostal_code" %>
			</div>
			<div class="field">
				<%= f.label :destination, "住所(郵便番号から自動入力)" %>
				<%= f.text_field :destination, autocomplete: "destination", placeholder: "住所", class: "jpostal_address" %>
			</div>
			<div class="field">
				<%= f.label :name, "宛名" %>
				<%= f.text_field :name, autocomplete: "name", placeholder: "宛名" %>
			</div>
		</div>
		<%= f.submit "注文確認画面に進む", class: "btn btn-primary submit_to_confirm_order" %>
	<% end %>
</section>